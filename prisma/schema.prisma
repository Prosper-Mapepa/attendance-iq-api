// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  passwordHash String
  role        UserRole @default(STUDENT)
  qrCode      String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  classes     Class[]  @relation("TeacherClasses")
  attendance  Attendance[]
  enrollments Enrollment[]
  flaggedAsStudent FlaggedStudent[] @relation("FlaggedStudent")

  @@map("users")
}

model Class {
  id          String   @id @default(cuid())
  name        String
  subject     String?
  schedule    String?
  description String?
  teacherId   String
  latitude    Float?
  longitude   Float?
  locationRadius Float? @default(50) // meters
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  teacher   User      @relation("TeacherClasses", fields: [teacherId], references: [id])
  sessions  Session[]
  enrollments Enrollment[]
  flaggedStudents FlaggedStudent[] @relation("FlaggedStudents")

  @@map("classes")
}

model Session {
  id        String   @id @default(cuid())
  classId   String
  otp       String   @unique
  validUntil DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  class      Class        @relation(fields: [classId], references: [id])
  attendance Attendance[]

  @@map("sessions")
}

model Enrollment {
  id        String   @id @default(cuid())
  studentId String
  classId   String
  enrolledAt DateTime @default(now())

  // Relations
  student   User    @relation(fields: [studentId], references: [id])
  class     Class   @relation(fields: [classId], references: [id])

  @@unique([studentId, classId])
  @@map("enrollments")
}

model Attendance {
  id                String   @id @default(cuid())
  sessionId         String
  studentId         String
  timestamp         DateTime @default(now())
  location          String?
  latitude          Float?
  longitude         Float?
  deviceFingerprint String?
  userAgent         String?
  screenResolution  String?
  riskScore         Int?
  isNewDevice       Boolean  @default(false)

  // Relations
  session   Session @relation(fields: [sessionId], references: [id])
  student   User    @relation(fields: [studentId], references: [id])

  @@unique([sessionId, studentId])
  @@map("attendance")
}

model FlaggedStudent {
  id          String   @id @default(cuid())
  studentId   String
  classId     String
  reasons     String[] // Array of reasons
  riskScore   Int
  flaggedAt   DateTime @default(now())
  status      FlagStatus @default(PENDING)
  resolvedAt  DateTime?
  resolvedBy  String?
  notes       String?

  // Relations
  student     User     @relation("FlaggedStudent", fields: [studentId], references: [id])
  class       Class    @relation("FlaggedStudents", fields: [classId], references: [id])

  @@unique([studentId, classId])
  @@map("flagged_students")
}

enum UserRole {
  TEACHER
  STUDENT
}

enum FlagStatus {
  PENDING
  RESOLVED
  DISMISSED
}

