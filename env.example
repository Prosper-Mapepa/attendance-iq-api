# Database
DATABASE_URL="postgresql://username:password@localhost:5432/attendiq"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server
PORT=3001
NODE_ENV=development

# CORS (for production, add your frontend domain)
CORS_ORIGIN="http://localhost:3000"

# Email Configuration
# Choose one provider: smtp, sendgrid, or ses
# RECOMMENDED FOR PRODUCTION: sendgrid (more reliable on Railway)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (RECOMMENDED)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-api-key-here

# SMTP Configuration (alternative - for Gmail, Outlook, etc.)
# Note: Gmail SMTP may have connection issues on Railway
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AWS SES Configuration (alternative)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Settings
# Use a real email address you own (Gmail, Outlook, etc.)
# This email must be verified in SendGrid
EMAIL_FROM=mapepapro@gmail.com
APP_NAME=AttendIQ

# Frontend Web URL (for password reset links)
# Development: http://localhost:3000
# Production: https://attendance-iq-frontend.netlify.app
FRONTEND_URL=http://localhost:3000

# Mobile App Deep Link (for deep linking from web to app)
MOBILE_APP_URL=attendiq://reset-password
