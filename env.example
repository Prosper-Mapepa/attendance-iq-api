# Database
DATABASE_URL="postgresql://username:password@localhost:5432/attendiq"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server
PORT=3001
NODE_ENV=development

# CORS (for production, add your frontend domain)
CORS_ORIGIN="http://localhost:3000"

# Email Configuration
# Choose one provider: smtp, sendgrid, or ses
EMAIL_PROVIDER=smtp

# SMTP Configuration (for Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (alternative)
# SENDGRID_API_KEY=SG.your-api-key-here

# AWS SES Configuration (alternative)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Settings
EMAIL_FROM=noreply@attendiq.app
APP_NAME=AttendIQ

# Frontend Web URL (for password reset links)
# Development: http://localhost:3000
# Production: https://attendance-iq-frontend.netlify.app
FRONTEND_URL=http://localhost:3000

# Mobile App Deep Link (for deep linking from web to app)
MOBILE_APP_URL=attendiq://reset-password
